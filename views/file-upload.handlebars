<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <form class="form-horizontal" role="form"
                  enctype="multipart/form-data" method="POST"
                  action="/file-upload/{year}/{month}">
                <div class="form-group row">
                    <label for="requesterName" class="col-4">Your Name:</label>
                    <input type="text" id="requesterName" class="col-8" name="requesterName">
                </div>
                <div class="form-group row">
                    <label for="requesterEmail" class="col-4">Email:</label>
                    <input type="email" id="requesterEmail" class="col-8" name="email">
                </div>
                <div class="row justify-content-md-center">
                    <div class="form-group">
                        <label for="offers" class="col-sm-12">Send me an offer I can't refuse.  Text documents only please</label>
                        <!-- Only select text documents -->
                        <input type="file" class="col-sm-12" id="offers" accept=".xlsx,.xls,.doc,.docx,.ppt, .pptx,.txt,.pdf" name="doc">
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary">Send Upload</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>